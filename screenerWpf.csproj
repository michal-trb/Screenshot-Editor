    <None Remove="Icons\blur-64.png" />
    <None Remove="Icons\blur-wh-64.png" />
    <None Remove="Icons\brush-64.png" />
    <None Remove="Icons\brush-wh-64.png" />
    <None Remove="Icons\bubble-64.png" />
    <None Remove="Icons\bubble-wh-64.png" />
    <None Remove="Icons\file-64.png" />
    <None Remove="Icons\file-wh-64.png" />
    <None Remove="Icons\folder-16.png" />
    <None Remove="Icons\folder-sc-16.png" />
    <None Remove="Icons\folder-sc-wh-16.png" />
    <None Remove="Icons\folder-vi-16.png" />
    <None Remove="Icons\folder-vi-wh-16.png" />
