<Window x:Class="screenerWpf.Views.OptionsWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Height="600" Width="920">
    <Grid>
        <TextBox x:Name="screenshotsSavePath" Margin="179,10,10,0" VerticalAlignment="Top"/>
        <Button Content="Save" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom" Width="75" Click="SaveButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="6,12,0,0" TextWrapping="Wrap" Text="Screenshots Save Path" VerticalAlignment="Top"/>
        <TextBox x:Name="screenshotsLibraryPath" Margin="179,33,10,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="6,35,0,0" TextWrapping="Wrap" Text="Screenshots Library Path" VerticalAlignment="Top"/>
        <TextBox x:Name="recordsSavePath" Margin="179,56,10,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="6,58,0,0" TextWrapping="Wrap" Text="Records Save Path" VerticalAlignment="Top"/>
    </Grid>
</Window>