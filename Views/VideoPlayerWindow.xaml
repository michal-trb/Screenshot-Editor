<Window x:Class="screenerWpf.Views.VideoPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Player" Height="450" Width="800">
    <Grid>
        <MediaElement x:Name="mediaPlayer" LoadedBehavior="Manual" MediaOpened="MediaPlayer_MediaOpened" MediaEnded="MediaPlayer_MediaEnded"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
            <Button Content="Play" Click="PlayButton_Click"/>
            <Button Content="Pause" Click="PauseButton_Click"/>
            <Button Content="Stop" Click="StopButton_Click"/>
            <Slider x:Name="timelineSlider" HorizontalAlignment="Stretch" ValueChanged="TimelineSlider_ValueChanged"/>
        </StackPanel>
    </Grid>
</Window>
