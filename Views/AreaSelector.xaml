<Window x:Class="screenerWpf.AreaSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:screenerWpf"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="AreaSelector">

    <!-- Main Grid to handle user interactions for selecting an area -->
    <Grid MouseDown="Grid_MouseDown" 
          MouseMove="Grid_MouseMove" 
          MouseUp="Grid_MouseUp" 
          Background="#22FFFFFF">
        <!-- 
            MouseDown: Initiates the selection
            MouseMove: Updates the selection rectangle as the mouse moves
            MouseUp: Finalizes the selected area

            Background: The translucent white (#22FFFFFF) provides a visible effect
            to indicate the grid that the user is interacting with.
          -->
    </Grid>
</Window>
