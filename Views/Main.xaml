<Window x:Class="screenerWpf.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:screenerWpf"
        mc:Ignorable="d"
        Background="#1E1E1E"
        Title="Main" Height="450" Width="600"
        WindowStyle='None'>


    <!-- Upewnij się, że styl RoundedButtonStyle jest dostępny w zasobach aplikacji -->
    <Window.Resources>
        <Style x:Key="ThumbnailBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF303030"/>
            <Setter Property="BorderBrush" Value="#FF303030"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505962"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                             Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505962"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#70787C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                       Background="{TemplateBinding Background}"
                       BorderBrush="{TemplateBinding BorderBrush}"
                       BorderThickness="{TemplateBinding BorderThickness}"
                       CornerRadius="5">
                            <!-- Ustawienie zaokrąglenia tutaj -->
                            <ContentPresenter HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505962"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#70787C"/>
                            </Trigger>
                        </ControlTemplate.Triggers> 
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainGrid"
        Grid.Row="1" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Pasek tytułu -->
            <RowDefinition Height="1*"/>
            <!-- Przyciski (1/3 przestrzeni) -->
            <RowDefinition Height="3*"/>
            <!-- Last Screenshots (2/3 przestrzeni) -->
        </Grid.RowDefinitions>
        <!-- Niestandardowy pasek tytułu -->
        <Border Grid.Row="0" Background="#3E3E42" Height="35" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Przycisk Options po lewej stronie -->
                <Button Grid.Column="0" Content="Options" Click="OptionsButton_Click" Style="{StaticResource TitleBarButtonStyle}" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="2,2,0,3" Width="71" />

                <!-- StackPanel z przyciskami po prawej stronie -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Content="_" Click="MinimizeWindow" Style="{StaticResource TitleBarButtonStyle}"/>
                    <Button Content="[]" Click="MaximizeRestoreWindow" Style="{StaticResource TitleBarButtonStyle}"/>
                    <Button Content="X" Click="CloseWindow" Style="{StaticResource TitleBarButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="560">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Przycisk przechwycenia pełnego ekranu -->
            <Button Grid.Column="1" Grid.Row="0" Content="Full Screen"  
            Command="{Binding CaptureFullCommand}" 
            Style="{StaticResource RoundedButtonStyle}"/>

            <!-- Przycisk przechwycenia wybranego obszaru -->
            <Button Grid.Column="2" Grid.Row="0" Content="Select Area"
            Command="{Binding CaptureAreaCommand}" 
            Style="{StaticResource RoundedButtonStyle}"/>

            <Button Grid.Column="3" Grid.Row="0" Content="Record Video" 
            Command="{Binding RecordVideoCommand}" 
            Style="{StaticResource RoundedButtonStyle}"/>

            <Button Grid.Column="1" Grid.Row="1" Content="Record Area Video" 
            Command="{Binding RecordAreaVideoCommand}" 
            Style="{StaticResource RoundedButtonStyle}"/>

            <Button Grid.Column="2" Grid.Row="1" Content="Capture Window Scroll"
            Command="{Binding CaptureWindowScrollCommand}" 
            Style="{StaticResource RoundedButtonStyle}"/>

            <Button Grid.Column="3" Grid.Row="1" Content="Capture Window"
            Command="{Binding CaptureWindowCommand}" 
            Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>


        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Wiersz dla tytułu "Last Screenshots" -->
                <RowDefinition Height="*"/>
                <!-- Wiersz dla ItemsControl Screenshots -->
                <RowDefinition Height="Auto"/>
                <!-- Wiersz dla tytułu "Last Videos" -->
                <RowDefinition Height="*"/>
                <!-- Wiersz dla ItemsControl Videos -->
            </Grid.RowDefinitions>
            <!-- TextBlock dla tytułu "Last Screenshots" -->
            <TextBlock Grid.Row="0" Text="Last Screenshots" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,0,0" Foreground="White"/>

            <!-- ItemsControl dla wyświetlania ostatnich zrzutów ekranu -->
            <Viewbox Grid.Row="1" Stretch="Uniform">
                <ItemsControl ItemsSource="{Binding LastScreenshots}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="5" Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ThumbnailBorderStyle}">
                                <Grid Width="150" Height="150">
                                    <!-- Tutaj ustaw stałą szerokość i wysokość dla każdego elementu -->
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Source="{Binding Thumbnail}" Height="90" MouseDown="Screenshot_MouseDown"/>
                                        <TextBlock Text="{Binding FileName}" TextWrapping="Wrap" TextAlignment="Center" Foreground="White"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Viewbox>
            <TextBlock Grid.Row="2" Text="Last Videos" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,0,0" Foreground="White"/>

            <!-- ItemsControl dla wyświetlania ostatnich zrzutów ekranu -->
            <Viewbox Grid.Row="3" Stretch="Uniform">
                <ItemsControl ItemsSource="{Binding LastVideos}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="5" Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ThumbnailBorderStyle}">
                                <Grid Width="150" Height="150">
                                    <!-- Tutaj ustaw stałą szerokość i wysokość dla każdego elementu -->
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Source="{Binding Thumbnail}" Height="90" MouseDown="Video_MouseDown"/>
                                        <TextBlock Text="{Binding FileName}" TextWrapping="Wrap" TextAlignment="Center" Foreground="White"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
    
